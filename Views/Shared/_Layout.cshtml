<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Identity App</title>

    <link href="\node_modules\bootstrap\dist\css\bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">Ana Sayfa</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">


                        @if (User != null && User.IsInRole("Admin"))
                        {

                            <li class="nav-item">
                                <a class="nav-link active" asp-action="Index" asp-controller="User" aria-current="page">Kullanıcılar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-action="Index" asp-controller="Role" aria-current="page">Roller</a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-action="MySignOut" asp-controller="Home" aria-current="page">Çıkış Yap</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-action="Create" asp-controller="Home" class="nav-link active" aria-current="page">Kayıt Ol</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-action="SignIn" asp-controller="Home">Giriş Yap</a>
                            </li>

                        }



                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <section>
        <div class="container mt-2 ">
            @RenderBody()
        </div>
    </section>

    <script src="\node_modules\bootstrap\dist\js\bootstrap.bundle.min.js"></script>
</body>
</html>
